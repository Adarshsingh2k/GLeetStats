{
    "manifest_version": 3,
    "name": "GLeet Stats",
    "version": "1.0",
    "description": "A simple Chrome extension",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "permissions": [
      "activeTab",
      "storage",
      "alarms"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  